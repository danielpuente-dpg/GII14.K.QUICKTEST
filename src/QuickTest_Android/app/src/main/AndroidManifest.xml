<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aplicacion.android.danielvm.quicktest_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".Activities.TestActivity" />
        <activity
            android:name=".Activities.InfoGradeActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Activities.GradeActivity" />

        <activity android:name=".Activities.SecondActivity" />
        <activity android:name=".Activities.TeacherActivity" />
        <activity
            android:name=".Activities.SecondTeacherActivity"
            android:parentActivityName=".Activities.TeacherActivity" />
        <activity android:name=".Activities.StudentActivity"></activity>
    </application>

</manifest>