<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.InfoGradeActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo respuesta"
                android:textSize="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas contestadas"
                android:textSize="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aciertos"
                android:textSize="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fallos"
                android:textSize="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntuación"
                android:textSize="8dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sin comodín"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº preguntas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº aciertos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº fallos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nota"
                android:textSize="12dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Comodín verde"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº preguntas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsTrueGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº aciertos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsErrorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº fallos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewGradeGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nota"
                android:textSize="12dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Comodín ámbar"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsAmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº preguntas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsTrueAmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº aciertos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberQuestionsErrorAmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº fallos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewGradeAmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nota"
                android:textSize="12dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Estado"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewGradeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nota"
                android:textSize="12dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberAnswerQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº preguntas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberAnswerQuestionsTrue"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº aciertos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewNumberAnswerQuestionsError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nº fallos"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textViewFinalGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nota"
                android:textSize="12dp" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tableLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTrophy"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/trophy" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageViewCircle"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="42dp"
                android:src="@drawable/green_circle" />

            <TextView
                android:id="@+id/textViewGradeCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="54dp"
                android:hint="8"
                android:textSize="40dp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_gravity="center" />


    </LinearLayout>

</RelativeLayout>
